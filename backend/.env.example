# Backend Environment Variables

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database Type: sqlite, postgresql, mysql
DB_TYPE=sqlite
DB_PATH=./protein_synthesis.db

# PostgreSQL Configuration (when DB_TYPE=postgresql)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=protein_synthesis
DB_USER=postgres
DB_PASSWORD=your_password_here

# MySQL Configuration (when DB_TYPE=mysql)
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=protein_synthesis
# DB_USER=root
# DB_PASSWORD=your_password_here

# Legacy DATABASE_URL (still supported)
DATABASE_URL=sqlite:///./protein_synthesis.db

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
SECRET_KEY=your-secret-key-here-change-in-production-32-chars-minimum
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration for Authentication
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=noreply@proteinsynth.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@proteinsynth.com

# =============================================================================
# REDIS CACHE CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True
LOG_LEVEL=INFO

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174

# =============================================================================
# AI MODELS CONFIGURATION
# =============================================================================
AI_MODELS_PATH=./models
MODEL_CACHE_SIZE=2048
ENABLE_MODEL_QUANTIZATION=True
AI_SERVICE_URL=http://localhost:8001

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=100
UPLOAD_DIR=./uploads
ALLOWED_EXTENSIONS=pdb,cif,mmtf,fasta,txt,csv,json

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
MAX_WORKERS=4
MEMORY_LIMIT=8192
REQUEST_TIMEOUT=300

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
ALPHAFOLD_API_URL=https://alphafold.ebi.ac.uk/api
UNIPROT_API_URL=https://rest.uniprot.org

# =============================================================================
# MONITORING (OPTIONAL)
# =============================================================================
SENTRY_DSN=
PROMETHEUS_PORT=9090